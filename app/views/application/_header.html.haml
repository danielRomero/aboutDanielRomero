%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to('Daniel Romero', root_locale_path(I18n.locale), class: 'navbar-brand', onclick: "window.danielromero.scroll_to($('body'))" )
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      .timeline-badge
      %ul.nav.navbar-nav.navbar-right
        %li
          =link_to(t(:contact).capitalize, contact_path(I18n.locale))
        -if session[:user]
          %li
            -if session[:user][:social] == 'facebook'
              =link_to(clear_session_path, onclick: "FB.logout(function(response){ $.getScript(#{clear_session_path(format: :js)}); });") do
                =t(:disconnect, name: session[:user][:name])
            -else
              =link_to(clear_session_path) do
                =t(:disconnect, name: session[:user][:name])